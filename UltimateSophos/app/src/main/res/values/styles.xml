<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="regular_text">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="card_text">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="input_edit_text">
        <item name="android:paddingStart">10sp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/input_right_border</item>
    </style>

    <style name="login_button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">350dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="button_no_background" parent="login_button">
        <item name="android:gravity">end|center_vertical</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/main_color</item>
        <item name="strokeWidth">1dip</item>
    </style>

    <style name="toolbar_text">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">200sp</item>
    </style>
</resources>
