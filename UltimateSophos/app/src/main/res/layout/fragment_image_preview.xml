<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/imagePreviewTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/regular_text"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/preview_documents_fragment_title"
        android:textColor="@color/black" />

    <RelativeLayout
        android:id="@+id/mapRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.ultimate.ultimatesophos.presentation.view.fragments.ImagePreviewFragment">

            <ImageView
                android:id="@+id/DocumentPreviewImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>

    </RelativeLayout>
</LinearLayout>
